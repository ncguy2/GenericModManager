<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="rootPane" prefHeight="64.0" prefWidth="600.0"
            style="-fx-background-color: #f00; -fx-border-color: green" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.ncguy.manager.fxml.controllers.controllers.PluginItemSummaryController">
    <GridPane layoutX="14.0" layoutY="1.0" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="14.0"
              AnchorPane.rightAnchor="-12.0" AnchorPane.topAnchor="1.0">
        <rowConstraints>
            <RowConstraints percentHeight="5.0"/>
            <RowConstraints percentHeight="45.0"/>
            <RowConstraints percentHeight="45.0"/>
            <RowConstraints percentHeight="5.0"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints percentWidth="10.0"/>
            <ColumnConstraints minWidth="10.0" percentWidth="90.0" prefWidth="100.0"/>
        </columnConstraints>

        <AnchorPane GridPane.rowSpan="2">
            <ImageView fx:id="iconViewer" AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="4.0"/>
        </AnchorPane>

        <AnchorPane GridPane.columnIndex="1">
            <Text fx:id="displayNameText" AnchorPane.topAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.bottomAnchor="4.0"/>
        </AnchorPane>
        <AnchorPane GridPane.columnIndex="1">
            <Text fx:id="summaryText" AnchorPane.topAnchor="4.0" AnchorPane.rightAnchor="4.0" AnchorPane.leftAnchor="4.0" AnchorPane.bottomAnchor="4.0"/>
        </AnchorPane>

    </GridPane>
</AnchorPane>
